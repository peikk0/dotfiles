{
  "extends": [
    "config:base",
    ":disableRateLimiting"
  ],
  "labels": [
    "dependencies"
  ],
  "git-submodules": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": ["git-submodules"],
      "matchUpdateTypes": ["digest"],
      "automerge": true,
      "gitLabAutomerge": true
    },
    {
      "matchPaths": [".config/nord-dircolors", ".config/nord-xresources", ".vim/pack/vendor/opt/nord"],
      "groupName": "Nord theme",
      "addLabels": ["nord"]
    },
    {
      "matchPaths": [".vim/pack/vendor/*"],
      "groupName": "Vim plugins",
      "addLabels": ["vim"]
    },
    {
      "matchPaths": [".zsh/plugins/*"],
      "groupName": "ZSH plugins",
      "addLabels": ["zsh"]
    }
  ]
}
