{
  "extends": [
    "config:base",
    ":disableRateLimiting"
  ],
  "assignAutomerge": true,
  "assignees": ["peikk0"],
  "labels": [
    "dependencies"
  ],
  "gitlabci": {
      "fileMatch": [
          "\\.gitlab-ci\\.yml$",
          "\\.gitlab/ci\\.yml$"
      ]
  },
  "git-submodules": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": ["git-submodules"],
      "matchUpdateTypes": ["digest"],
      "automerge": true,
      "platformAutomerge": true,
      "addLabels": ["submodule"]
    },
    {
      "matchManagers": ["git-submodules"],
      "matchPackageNames": [".config/nord-dircolors", ".config/nord-xresources", ".vim/pack/vendor/opt/nord"],
      "groupName": "Nord theme",
      "addLabels": ["nord"]
    },
    {
      "matchManagers": ["git-submodules"],
      "matchPackageNames": [".local/fzf"],
      "groupName": "Others"
    },
    {
      "matchManagers": ["git-submodules"],
      "matchPackagePrefixes": [".vim/pack/vendor/"],
      "groupName": "Vim plugins",
      "addLabels": ["vim"]
    },
    {
      "matchManagers": ["git-submodules"],
      "matchPackagePrefixes": [".zsh/plugins/"],
      "groupName": "ZSH plugins",
      "addLabels": ["zsh"]
    }
  ]
}
